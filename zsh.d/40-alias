# .zsh.d/40-alias

if [ $OS = "BSD" ]; then
	alias fls='/bin/ls -FG'
	alias fll='fls -lha'
	alias ls='gls -F --color=auto'
	alias neodate="date +'%Y%m%dT%H%M%S%z'"
else
	alias ls='ls -F --color=auto'
	alias neodate="date +'%Y%m%dT%H%M%S%z'"
	alias grep='grep --color=auto'

	alias vm="qemu-system-x86_64 -smp 2 -m 2048 -accel kvm"
fi

alias zfs-ls="zfs list -o name,used,referenced,type,mountpoint,compression,compressratio,checksum,recordsize,available"

alias la='ls -A'
alias l='ls -CF'
alias ll="ls --time-style=+'[%Y%m%dT%H%M%S%z]' -lha"
alias lli="ll -i"
alias sudo="sudo "
alias grep='grep --color=auto'

alias date_stamp="date +'%Y%m%dT%H%M%S%z'"
alias ipecho="curl https://ipecho.net/plain"

# Shortcut to save keystrokes
alias t=tmux
compdef t=tmux
alias q=exit

alias avrph='rsync --old-args --inplace -avrPh'
compdef avrph=rsync
